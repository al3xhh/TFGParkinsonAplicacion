<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tfg.ucm.com.tfgparkinson.Activities.MainActivity">

    <Button
        android:id="@+id/buttonNuevoTemblor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃ±adir Nuevo Temblor"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/observaciones"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <Button
        android:id="@+id/buttonHistorial"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Ver Historial"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonNuevoTemblor"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonTemblorAhora"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Estoy Temblando"
        app:layout_constraintTop_toBottomOf="@+id/buttonHistorial"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/observaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:hint="Observaciones"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker" />

    <DatePicker
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:id="@+id/datePicker"
        android:layout_width="335dp"
        android:layout_height="115dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TimePicker
        android:timePickerMode="spinner"
        android:id="@+id/timePicker"
        android:layout_width="274dp"
        android:layout_height="110dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/datePicker"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>
