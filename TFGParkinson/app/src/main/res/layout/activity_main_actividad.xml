<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/botonAnyadirActividad"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_weight="1"
            android:background="@color/colorIndigo"
            android:text="Añadir actividad"
            android:textColor="@color/colorWhite"
            android:textSize="24dp" />

        <Button
            android:id="@+id/botonAnyadirMedicamento"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_weight="1"
            android:background="@color/colorBlue"
            android:text="Añadir medicamento"
            android:textColor="@color/colorWhite"
            android:textSize="24dp" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/botonVerGraficos"
                android:layout_width="220dp"
                android:layout_height="210dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="@color/colorCyan"
                android:text="Ver gráficos"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />

            <Button
                android:id="@+id/botonVerMedicamentos"
                android:layout_width="220dp"
                android:layout_height="210dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@color/colorCyan"
                android:text="Ver medicamentos"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </TableRow>
    </LinearLayout>
</RelativeLayout>